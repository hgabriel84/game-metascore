<?xml version="1.0" encoding="utf-8" ?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/game_list_fragment">

    <fragment
        android:id="@+id/game_list_fragment"
        android:name="com.hgabriel.gamemetascore.ui.GamesFragment"
        tools:layout="@layout/fragment_games">

        <action
            android:id="@+id/action_game_list_fragment_to_game_detail_fragment"
            app:destination="@id/game_detail_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_game_list_fragment_to_game_search_fragment"
            app:destination="@id/game_search_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/game_detail_fragment"
        android:name="com.hgabriel.gamemetascore.ui.GameDetailFragment"
        tools:layout="@layout/fragment_game_detail">

        <argument
            android:name="gameId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/game_search_fragment"
        android:name="com.hgabriel.gamemetascore.ui.GameSearchFragment"
        tools:layout="@layout/fragment_game_search">

    </fragment>

</navigation>